                  <label for='password'>Mật khẩu mới</label>
                  <input
                    type='password'
                    name='password'
                    id='password'
                    class='password'
                  />
                  <span class='invalid-feedback'></span>
                  <div class='icons-toggle'>
                    <svg
                      xmlns='http://www.w3.org/2000/svg'
                      fill='none'
                      viewBox='0 0 24 24'
