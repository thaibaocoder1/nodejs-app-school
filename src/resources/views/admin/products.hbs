<div id='main-content-wp' class='list-product-page'>
  <div class='wrap clearfix'>
    <div id='sidebar' class='fl-left'>
      <ul id='sidebar-menu'>
        <li class='nav-item'>
          <a href='' title='' class='nav-link nav-toggle'>
            <span class='fa fa-product-hunt icon'></span>
            <span class='title'>Sản phẩm</span>
          </a>
          <ul class='sub-menu'>
            <li class='nav-item'>
              <a href='/admin/add-product.html' title='' class='nav-link'>Thêm
                mới</a>
            </li>
            <li class='nav-item'>
              <a href='/admin/product.html' title='' class='nav-link'>Danh sách
                sản phẩm</a>
            </li>
            <li class='nav-item'>
              <a href='/admin/category.html' title='' class='nav-link'>Danh mục
                sản phẩm</a>
            </li>
          </ul>
        </li>
        <li class='nav-item'>
          <a href='' title='' class='nav-link nav-toggle'>
            <span class='fa fa-database icon'></span>
            <span class='title'>Bán hàng</span>
          </a>
          <ul class='sub-menu'>
            <li class='nav-item'>
              <a href='/admin/order.html' title='' class='nav-link'>Danh sách
                đơn hàng</a>
            </li>
          </ul>
        </li>
        <li class='nav-item'>
          <a href='#' title='' class='nav-link nav-toggle'>
            <i class='fa fa-comment' aria-hidden='true'></i>
            <span class='title'>Bình luận</span>
          </a>
          <ul class='sub-menu'>
            <li class='nav-item'>
              <a href='/admin/comment.html' title='' class='nav-link'>Danh sách
                bình luận</a>
            </li>
          </ul>
        </li>
      </ul>
    </div>
    <div id='content' class='fl-right'>
      <div class='section' id='title-page'>
        <div class='clearfix'>
          <h3 id='index' class='fl-left'>Danh sách sản phẩm</h3>
          <a
            href='/admin/products/add'
            title=''
            id='add-new'
            class='fl-left'
          >Thêm mới</a>
        </div>
      </div>
      <div class='section' id='detail-page'>
        <div class='section-detail'>
          <div class='filter-wp clearfix'>
            <ul class='post-status fl-left'>
              <li class='all'><a href=''>Tất cả
                  <span class='count'>(69)</span></a>
                |</li>
              <li class='publish'><a href=''>Đã đăng
                  <span class='count'>(51)</span></a>
                |</li>
              <li class='pending'><a href=''>Chờ xét duyệt<span
                    class='count'
                  >(0)</span>
                  |</a></li>
              <li class='pending'><a href=''>Thùng rác<span
                    class='count'
                  >(0)</span></a></li>
            </ul>
            <form method='GET' class='form-s fl-right'>
              <input type='text' name='s' id='s' />
              <input type='submit' name='sm_s' value='Tìm kiếm' />
            </form>
          </div>
          <div class='actions'>
            <form method='GET' action='' class='form-actions'>
              <select name='actions'>
                <option value='0'>Tác vụ</option>
                <option value='1'>Công khai</option>
                <option value='1'>Chờ duyệt</option>
                <option value='2'>Bỏ vào thủng rác</option>
              </select>
              <input type='submit' name='sm_action' value='Áp dụng' />
            </form>
          </div>
          <div class='table-responsive'>
            <table class='table list-table-wp'>
              <thead>
                <tr>
                  <td><input
                      type='checkbox'
                      name='checkAll'
                      id='checkAll'
                    /></td>
                  <td><span class='thead-text'>STT</span></td>
                  <td><span class='thead-text'>Mã sản phẩm</span></td>
                  <td><span class='thead-text'>Hình ảnh</span></td>
                  <td><span class='thead-text'>Tên sản phẩm</span></td>
                  <td><span class='thead-text'>Giá</span></td>
                  <td><span class='thead-text'>Sale</span></td>
                  <td><span class='thead-text'>Số lượng</span></td>
                  <td><span class='thead-text'>Thời gian</span></td>
                  <td colspan='2'><span class='thead-text'>Thao tác</span></td>
                </tr>
              </thead>
              <tbody>
                {{#each products}}
                  <tr>
                    <td><input
                        type='checkbox'
                        name='checkItem'
                        class='checkItem'
                      /></td>
                    <td><span class='tbody-text'>1</span></td>
                    <td><span class='tbody-text'>{{this.code}}</span></td>
                    <td>
                      <img
                        src='/images/{{this.thumb}}'
                        alt='{{this.name}}'
                        height='80'
                      />
                    </td>
                    <td>
                      <a href='' title='{{this.name}}'>{{this.name}}</a>
                    </td>
                    <td><span class='tbody-text'>{{format
                          this.price
                        }}</span></td>
                    <td><span class='tbody-text'>{{this.discount}}%</span></td>
                    <td><span class='tbody-text'>{{this.quantity}}</span></td>
                    <td><span class='tbody-text'>{{this.createdAt}}</span></td>
                    <td>
                      <a
                        href='/admin/products/edit/{{this._id}}'
                        class=''
                      >Sửa</a>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
              <tfoot>
                <tr>
                  <td><input
                      type='checkbox'
                      name='checkAll'
                      id='checkAll'
                    /></td>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
      </div>
      <div class='section' id='paging-wp'>
        <div class='section-detail clearfix'>
          <p id='desc' class='fl-left'>Chọn vào checkbox để lựa chọn tất cả</p>
        </div>
      </div>
    </div>
  </div>
</div>